<div class="container">
  <div class="row px-5 px-sm-0">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2>New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table table-hover table-inverse" >
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |f| %>
            <tr>
              <td><%= image_tag f.get_profile_image, size: '80x80' %></td>
              <td><%= f.name %></td>
              <td><%= link_to 'Show', "/users/#{f.id}" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>

  </div>
</div>
