<h1>Follow Users</h1>
        <table class="table table-hover table-inverse" >
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% if @users.exists? %>
            <% @users.each do |f| %>
            <tr>
              <td><%= image_tag f.get_profile_image, size: '80x80' %></td>
              <td><%= f.name %></td>
              <td>フォロー数：<%= f.followings.count %></td>
              <td>フォロワー数：<%= f.followers.count %></td>
              <td><%= link_to 'Show', "/users/#{f.id}" %></td>
            </tr>
            <% end %>
            <% else %>
              <p>ユーザーはいません</p>
            <% end %>
          </tbody>
        </table>
    </div>
