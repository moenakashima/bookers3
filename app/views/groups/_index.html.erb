<table class="table table-hover table-inverse" >
  <thead>
    <th>Image</th>
    <th>Name</th>
    <th>Introduction</th>
      <th>Members</th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <% groups.each do |group| %>
    <tr id = "group_<%= group.id %>" >
      <td>
        <%= image_tag group.get_image, size: '80x80' %>
      </td>
      <td><%= link_to group.name, group_path(group.id)%></td>
      <td><%= group.introduction %></td>
      <td><%= group.group_users.count %></td>
      <% if current_user.id == group.owner_id %>
      <td><%= link_to 'Edit', edit_group_path(group.id), class: 'btn btn-sm btn-success' %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
