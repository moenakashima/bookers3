<div class= "container">
  <div class= "row">
    <div class= "ol-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <%= render 'layouts/errors', obj: @book %>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |book| %>
        <div class= "form-group">
          <label>Title</label>
          <%= book.text_field :title, class: 'form-control'  %>
        </div>

        <div class= "form-group">
          <label>Opinion</label>
          <%= book.text_area :body, class: 'form-control'   %>
        </div>

        <div class= "form-group">
          <%= book.submit 'Update Book', class: 'btn btn-success'  %>
        </div>

      <% end %>

      <a href= "<%= book_path(@book.id) %>">Show</a>|
      <a href= "/books">Back</a>
    </div>
  </div>
</div>